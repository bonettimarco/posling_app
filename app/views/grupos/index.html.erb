<% @aux=get_idioma() %>
<% @idioma=@aux.idioma %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
              <% if @idioma==1 %>
                <h1>Research Groups</h1>
                <% else if @idioma==2 %>
                  <h1>Grupos de Investigaci√≥n</h1>
                  <% else %>
                    <h1>Grupos de Pesquisa</h1>
                  <% end %>
              <% end %>
        <table class="table table-responsive table-bordered table-hover">
        <% if logged_in? %>
          <thead>
            <tr>
                <th>Idioma</th>
                <th>Texto</th>
              <% if logged_in? %>
                <th colspan="3"></th>
              <% end %>
            </tr>
          </thead>
        <% end %>
          <tbody>
            <% @grupos.each do |grupo| %>
              <tr>
              <% if logged_in? %>
                <td><%= grupo.idioma %></td>
                <td><%= grupo.texto %></td>
                <td><%= link_to 'Show', grupo %></td>
                <td><%= link_to 'Edit', edit_grupo_path(grupo) %></td>
                <td><%= link_to 'Destroy', grupo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else if @idioma==grupo.idioma%>
                <td><%= grupo.texto %></td>
              <% end %>
              <% end %>
              </tr>
          <tbody>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <% if logged_in? %>
        <%= link_to 'New Grupo', new_grupo_path %>
        <% end %>
    </div>
  </div>  
