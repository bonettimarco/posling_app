<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
        <h1>Grupos de Pesquisa</h1>
        
        <table class="table table-responsive table-bordered table-hover">
          <thead>
            <tr>
              <th>Texto</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @grupos.each do |grupo| %>
              <tr>
                <td><%= grupo.texto %></td>
        		<% if logged_in? %>
                <td><%= link_to 'Show', grupo %></td>
                <td><%= link_to 'Edit', edit_grupo_path(grupo) %></td>
                <td><%= link_to 'Destroy', grupo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        		<% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <br>
        
        <% if logged_in? %>
        <%= link_to 'New Grupo', new_grupo_path %>
        <% end %>
    </div>
  </div>  