<% @idioma=Idioma.find(1) %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
     
<% if @idioma.aux==1 %>
 <h1>Inglês - Lista das Disciplinas da Linha 1</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <th>Inglês - Text</th>

<% else if @idioma.aux==2 %>
 <h1>Espanhol - Lista das Disciplinas da Linha 1</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <th>Espanhol - Texto</th>
<% else %>
 <h1>Lista das Disciplinas da Linha 1</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <th>Texto</th>
<% end %>

<% end %>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <% @disciplinas.each do |disciplina| %>
            <tr>
              <td><%= disciplina.texto %></td>
      		<% if logged_in? %>
              <td><%= link_to 'Show', disciplina %></td>
              <td><%= link_to 'Edit', edit_disciplina_path(disciplina) %></td>
              <td><%= link_to 'Destroy', disciplina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      		<% end %>
        	  </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      	<% if logged_in? %>
      		<%= link_to 'New Disciplina', new_disciplina_path %>
      	<% end %>
    </div>
</div>
<% @idioma.aux='3' %>
<% @idioma.save %>