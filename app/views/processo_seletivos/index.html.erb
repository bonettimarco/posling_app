<% @aux = Idioma.find(1) %>
<% @idioma = @aux.aux %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
           <% if @idioma==1 %>
  <h1>Selection Process</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
          <% if logged_in? %>
            <th>Title</th>
            <th>Masters</th>
            <th>Doctoral</th>
            <th colspan="3"></th>
          <% end %>
         <% else if @idioma==2 %>
          <h1>Espanhol - Processos Seletivos</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <% if logged_in? %>
              <th>Espanhol - Cabecalho</th>
              <th>Espanhol - Mestrado</th>
              <th>Espanhol - Doutorado</th>
              <th colspan="3"></th>
            <% end %>
         <% else %>
<h1>Processos Seletivos</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <% if logged_in? %>
              <th>Cabecalho</th>
              <th>Mestrado</th>
              <th>Doutorado</th>
              <th colspan="3"></th>
            <% end %>
      <% end %>


        </thead>
      
<% end %>
     
        <tbody>
          <% @processo_seletivos.each do |processo_seletivo| %>
            <tr>
          		<% if logged_in? %>
              <td><%= processo_seletivo.cabecalho %></td>
              <td><a href=<%= processo_seletivo.texto1 %>><%= processo_seletivo.mestrado %></td>
              <td><a href=<%= processo_seletivo.texto2 %>><%= processo_seletivo.doutorado %></td>
                <td><%= link_to 'Show', processo_seletivo %></td>
                <td><%= link_to 'Edit', edit_processo_seletivo_path(processo_seletivo) %></td>
                <td><%= link_to 'Destroy', processo_seletivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else if @idioma==processo_seletivo.idioma %>
                <td><%= processo_seletivo.cabecalho %></td>
                <td><a href=<%= processo_seletivo.texto1 %>><%= processo_seletivo.mestrado %></td>
                <td><a href=<%= processo_seletivo.texto2 %>><%= processo_seletivo.doutorado %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      		<% if logged_in? %>
            <%= link_to 'New Processo seletivo', new_processo_seletivo_path %>
          <% end %>
    </div>      
</div> 
