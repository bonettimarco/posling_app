<% @aux=get_idioma() %>
<% @idioma=@aux.idioma %>
		<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
<% if @idioma==1 %>
        <h1>Collaborators</h1>
<% else if @idioma==2 %>
        <h1>Espanhol Colaboradores</h1>
<% else %>
        <h1>Colaboradores</h1>
<% end %>
<% end %>
    </div>

<table class="table table-responsive table-bordered table-hover">
      <% if logged_in? %>
<thead>
    <tr>
      <th>Nome</th>

      <th colspan="3"></th>
    </tr>
  </thead>
 <% end %> 

  <tbody>
    <% @colaboradores.each do |colaboradore| %>
      <tr>
        <td><%= colaboradore.nome %></td>
		<% if logged_in? %>
        <td><%= link_to 'Show', colaboradore %></td>
        <td><%= link_to 'Edit', edit_colaboradore_path(colaboradore) %></td>
        <td><%= link_to 'Destroy', colaboradore, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if logged_in? %>
<%= link_to 'New Colaboradore', new_colaboradore_path %>
<% end %>

</div>