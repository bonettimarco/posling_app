<% @idioma=Idioma.find(1) %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
     <% if @idioma.aux==1 %>
            <h1>Inglês - Docentes</h1>
         <% else if @idioma.aux==2 %>
            <h1>Espanhol - Docentes</h1>
         <% else %>
          <h1>Docentes</h1>
      <% end %>
      
<% end %>

<table class="table table-responsive table-bordered table-hover">
  <thead>
     <% if @idioma=='1' %>
    <tr>
      <th>Inglês - Linha</th>
      <th>Inglês - Nome</th>

         <% else if @idioma=='2' %>
    <tr>
      <th>Espanhol - Linha</th>
      <th>Espanhol - Nome</th>

         <% else %>
    <tr>
      <th>Linha</th>
      <th>Nome</th>

      <% end %>
      
<% end %>
      <% if logged_in? %>
      <th colspan="3"></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @docentes.each do |docente| %>
      <tr>
        <td><%= docente.linha %></td>
        <td><a href=<%= docente.link %>><%= docente.nome %></td>
        <% if logged_in? %>
          <td><%= link_to 'Show', docente %></td>
          <td><%= link_to 'Edit', edit_docente_path(docente) %></td>
          <td><%= link_to 'Destroy', docente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

		<% if logged_in? %>
		  <%= link_to 'New Docente', new_docente_path %>
    <% end %>
    
  </div>
</div>
<% @idioma.aux = 3 %>
<% @idioma.save %>