<% @idioma=Idioma.find(1) %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
      <% if @idioma.aux==1 %>
        <h1>Ingles - Linhas de pesquisa</h1>
        <% else if @idioma.aux==2 %>
          <h1>Espanhol - Linhas de pesquisa</h1>
          <% else %>
              <h1>Linhas de pesquisa</h1>
          <% end %>
        <% end %>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
            <th></th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
        <% @conta = 1 %>
          <% @linhas.each do |linha| %>
            <tr>
              <td><%= linha.texto %></td>
      		<% if(@conta==1) %>
              <% if @idioma.aux==1 %>
                <td><%= link_to 'Inglês Disciplinas', disciplinasing_url %></td>
              <% else if @idioma.aux==2 %>
                <td><%= link_to 'Espanhol Disciplinas', disciplinasesp_url %></td>
              <% else %>                
                <td><%= link_to 'Disciplinas', disciplinas_url %></td>
          		<% end %>
          		<% end %>
          <% end %>
      		<% if @conta==2 %>
              <% if @idioma.aux==1 %>
                <td><%= link_to 'Inglês - Disciplinas', disciplinas2sing_url %></td>
              <% else if @idioma.aux==2 %>
                <td><%= link_to 'Espanhol Disciplinas', disciplinas2sesp_url %></td>
              <% else %>
              <td><%= link_to 'Disciplinas', disciplinas2s_url %></td>
                <% end %>
                <%end %>
      		<% end %>
      		<% if @conta==3 %>
              <% if @idioma.aux==1 %>
                <td><%= link_to 'Inglês - Disciplinas', disciplinas3sing_url %></td>
                <% else if @idioma.aux==2 %>
                <td><%= link_to 'Espanhol - Disciplinas', disciplinas3sesp_url %></td>
              <% else %>
              <td><%= link_to 'Disciplinas', disciplinas3s_url %></td>
              <% end %>
            <% end %>
      		<% end %>
      		<% @conta = @conta+1 %>
      		<% if logged_in? %>
              <td><%= link_to 'Edit', edit_linha_path(linha) %></td>
              <td><%= link_to 'Destroy', linha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      		<% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <% if logged_in? %>
      <%= link_to 'New Linha', new_linha_path %>
      <% end %>
    </div>
</div>  
<% @idioma.aux = '3' %>
<% @idioma.save %>