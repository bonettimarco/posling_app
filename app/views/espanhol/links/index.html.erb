<% @idioma=Idioma.find(1) %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
      <h1>Links</h1>
      
      <table class="table table-responsive table-bordered table-hover">
        <thead>
          <tr>
     <% if @idioma.aux==1 %>
             <th>Link</th>
            <th>Text</th>
         <% else if @idioma.aux==2 %>
             <th>Espanhol - Link</th>
            <th>Espanhol - Texto</th>
         <% else %>
             <th>Link</th>
            <th>Texto</th>
        <% end %>
    <% end %>   
          <% if logged_in? %>
              <th colspan="3"></th>
              <% end %>
          </tr>
        </thead>
      
        <tbody>
          <% @links.each do |link| %>
            <tr>
              <td></td>
              <td><a href=<%= link.texto %>><%= link.link %></a></td>
          		<% if logged_in? %>
                <td><%= link_to 'Show', link %></td>
                <td><%= link_to 'Edit', edit_link_path(link) %></td>
                <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      		<% if logged_in? %>
            <%= link_to 'New Link', new_link_path %>
          <% end %>
    </div>
</div>    
