<% @egressos=Egresso.all %>
<% @idioma=Idioma.find(1) %>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
        <% if @idioma.aux==1 %>
            <h1>InglÃªs - Egressos</h1>
            <% else if @idioma.aux==2 %>
            <h1>Espanhol - Egressos</h1>
            <% else %>
            <h1>Egressos</h1>
            <% end %>
        <% end %>
    </div>
    <div class="container-fluid">
        <div class="col-md-6 col-md-offset-3">
            <table>
                <thead>
                    <tr>
                        <th>Mestrado/Ano</th>
                    </tr>
                 </thead>
                 <tbody>
                    <% for i in 2010..2030 %>
                        <% @egressos.each do |egresso| %>
                            <% if((egresso.ano==i) && (egresso.nivel=='Mestrado')) %>
                                <tr>
                                    <td><a href="mest<%= egresso.ano %>"><%= egresso.ano %></td>
                                </tr>
                            <% end %>
                        <% end %>
                    <% end %>
                  </tbody>
            </table>
        </div>
            </div>
    <div class="container-fluid">
        <div class="col-md-6 col-md-offset-3">
            <table>
                <thead>
                    <tr>
                        <th>Doutorado/Ano</th>
                    </tr>
                 </thead>
                 <tbody>
                    <% for i in 2010..2030 %>
                        <% @egressos.each do |egresso| %>
                            <% if((egresso.ano==i) && (egresso.nivel=='Doutorado')) %>
                                <tr>
                                    <td><a href="dout<%= egresso.ano %>"><%= egresso.ano %></td>
                                    <% break %>
                                </tr>
                            <% end %>
                        <% end %>
                    <% end %>
                  </tbody>
            </table>
        </div>
    </div>
</div>

<% if logged_in? %>
<%= link_to 'New Egresso', new_egresso_path %>
<% end %>