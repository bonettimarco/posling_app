<% @aux=get_idioma() %>
<% @idioma=@aux.idioma %>
<p id="notice"><%= notice %></p>
<div class="container-fluid cont-estatico">
    <div class="container-fluid ">
      <h1>Links</h1>
      
      <table class="table table-responsive table-bordered table-hover">
<% if logged_in? %>
<thead>
          <tr>
     <% if @idioma==1 %>
             <th>Link</th>
            <th>Text</th>
         <% else if @idioma==2 %>
             <th>Espanhol - Link</th>
            <th>Espanhol - Texto</th>
         <% else %>
             <th>Link</th>
            <th>Texto</th>
        <% end %>
    <% end %>   
          <% if logged_in? %>
              <th colspan="3"></th>
              <% end %>
          </tr>
        </thead>
<% end %>      
        <tbody>
          <% @links.each do |link| %>
<% if logged_in? %>
<tr>
              <td><%= link.link %></td>
              <td><%= link.texto %></td>
                <td><%= link_to 'Show', link %></td>
                <td><%= link_to 'Edit', edit_link_path(link) %></td>
                <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>

<% else %>
<tr><a href=<%= link.texto %>><%= link.link %></a></tr>
<% end %>
<% end %>
        </tbody>
      </table>
      
      <br>
      		<% if logged_in? %>
            <%= link_to 'New Link', new_link_path %>
          <% end %>
    </div>
</div>    
